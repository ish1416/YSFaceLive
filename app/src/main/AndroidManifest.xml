<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TTVLiveDemo">

        <activity android:name="com.ttv.livedemo.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ttv.livedemo.WelcomeActivity"
            android:exported="false" />
        
        <activity android:name="com.ttv.livedemo.ResultActivity"
            android:exported="false" />

        <activity android:name="com.ttv.livedemo.ActivationActivity"
            android:exported="false">
        </activity>

        <activity android:name="com.ttv.livedemo.CameraActivity"
            android:exported="false">
        </activity>

        <activity android:name="qrcode.QrCodeActivity"
            android:exported="false"/>

    </application>

</manifest>