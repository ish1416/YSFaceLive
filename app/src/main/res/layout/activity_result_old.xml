<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gov_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/surlogo"
                android:layout_marginEnd="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DigiVerify Results"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gov_text" />
        </LinearLayout>

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:elevation="12dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgResult"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_done"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verification_complete"
                    android:textColor="@color/gov_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_live"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence: 85%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identity verification completed successfully"
                    android:textSize="14sp"
                    android:textColor="@color/gov_text"
                    android:gravity="center"
                    android:alpha="0.8"
                    android:layout_marginBottom="32dp" />

                <!-- Verification Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verification Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gov_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Face Detection: Successful"
                        android:textSize="12sp"
                        android:textColor="@color/gov_text"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Liveness Check: Completed"
                        android:textSize="12sp"
                        android:textColor="@color/gov_text"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Quality Assessment: Good"
                        android:textSize="12sp"
                        android:textColor="@color/gov_text"
                        android:alpha="0.8" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnTryAgain"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/try_again"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/gov_button_bg"
                    android:elevation="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Government Footer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/surlogo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by YellowSense Technologies"
                android:textSize="12sp"
                android:textColor="@color/gov_text"
                android:alpha="0.6" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>